
@{
    ViewData["Title"] = "RegisterAcount";
    var ErrorMessage = ViewBag.ErrorMessage;
}

@model ASPlogInV2.Models.CheckRegistrationData

@{
    string ShowDiv = "";
    if (ErrorMessage == null || ErrorMessage == "")
    {
        //If there is no error message
        ShowDiv = "fade";
    }
    else
    {
        //If there is a error message
        ShowDiv = "show";
    }

    //Will show the user if something went wrong or not.
    <div class="alert alert-danger alert-dismissible @ShowDiv" role="alert">
        <p>Error: @ErrorMessage</p>
        <button class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<section class="container mt-3 mt-lg-4">
    <div class="row">
        <div class="col">
            <div class="card bg-accent text-adaptive border-adaptive py-4">
                <div class="card-body">
                    <h3 class="card-title text-center">Sign Up</h3>
                    <form method="post" asp-action="RegisterAcountPage" asp-controller="Home">
                        <!-- Email -->
                        <div class="row">
                            <div class="col-md-6 mx-auto">
                                <small>Email:</small>
                                <input asp-for="useremail" type="text" placeholder="Enter email..." class="form-control border-adaptive" />
                            </div>
                        </div>
                        <!-- Username -->
                        <div class="row">
                            <div class="col-md-6 mx-auto">
                                <small>Username:</small>
                                <input asp-for="username" type="text" placeholder="Enter username..." class="form-control border-adaptive" />
                            </div>
                        </div>
                        <!-- Password -->
                        <div class="row mt-2">
                            <div class="col-md-6 mx-auto">
                                <small>Password:</small>
                                <small class=" text-sm-start"><i>(Minumum 8 characters long, one digit and one uppercase and lowercase letters)</i></small>
                                <input asp-for="password" type="password" placeholder="Enter password..." class="form-control border-adaptive" />
                            </div>
                        </div>
                        <!-- Confirm Password -->
                        <div class="row mt-2">
                            <div class="col-md-6 mx-auto">
                                <small>Confirm Password:</small>
                                <input asp-for="confirmpassword" type="password" placeholder="Confirm password..." class="form-control border-adaptive" />
                            </div>
                        </div>
                        <!-- Already have an account? -->
                        <div class="row text-center mt-3">
                            <div class="col">
                                <a href="@Url.Action("LoginPage", "Home")" class="text-center text-linkcolor text-opacity-50 text-decoration-none">Already have an account?</a>
                            </div>
                        </div>
                        <!-- Agree to terms checkbox -->
                        <div class="row">
                            <div class="col">
                                <div class="input-group d-flex justify-content-center">
                                    <input asp-for="agreedToTerms" class="form-check-input text-adaptive" type="checkbox"/>
                                    <small class="ms-1">I agree to all <a href="@Url.Action("Privacy", "Home")">terms and conditions</a></small>
                                </div>
                            </div>
                        </div>
                        <!-- Sighn in button -->
                        <div class="row text-center mt-1">
                            <div class="col">
                                <button class="btn btn-lg text-adaptive border-adaptive" type="submit">Sign Up</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>